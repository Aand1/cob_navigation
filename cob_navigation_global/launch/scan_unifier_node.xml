<?xml version="1.0"?>
<launch>

  <arg name="robot" default="$(optenv ROBOT !!NO_ROBOT_SET!!)"/>

  <!-- run scan unifier -->
  <node pkg="ipa_navigation_scan_unifier" type="scan_unifier_node" name="scan_unifier" output="log">
    <rosparam file="$(find cob_navigation_config)/$(arg robot)/scan_unifier_config.yaml" command="load"/>
    <remap from="scan_unified" to="/scan_unified"/>
  </node>

</launch>
